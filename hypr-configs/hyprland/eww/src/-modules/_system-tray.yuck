(defwidget Systemtray [?orientation ?class]
  (box
    :space-evenly false
    :valign "center"
    :halign "center"
    :class "${class}"

    (revealer
      :reveal revealSystray
      :transition "slideup"

(systray
        :orientation orientation
        :icon-size 20
        :spacing spacing-default
        )

      )
    ))